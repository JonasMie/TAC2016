<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:toolts="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/todays_drive_time_card"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

            <TextView
                    android:id="@+id/todays_drive_time_card_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Heute Fahrtzeit"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/week_drive_time_card"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

            <TextView
                    android:id="@+id/week_drive_time_card_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Wöchentliche Fahrtzeit"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/todays_work_time_card"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

            <TextView
                    android:id="@+id/todays_work_time_card_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Heute Arbeitszeit"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/week_work_time_card"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

            <TextView
                    android:id="@+id/week_work_time_card_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Wöchentliche Arbeitszeit"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/todays_pause_time_card"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

            <TextView
                    android:id="@+id/todays_pause_time_card_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Heute Pausenzeit"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/week_pause_time_card"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

            <TextView
                    android:id="@+id/week_pause_time_card_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Wöchentliche Pausenzeit"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>