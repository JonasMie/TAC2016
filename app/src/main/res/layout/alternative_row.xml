<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rasthof Alternative"
        android:id="@+id/nameAlt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar3"
        style="@style/Base.Widget.AppCompat.RatingBar.Small"
        android:rating="3"
        android:layout_alignBottom="@+id/nameAlt"
        android:layout_toRightOf="@+id/nameAlt"
        android:layout_toEndOf="@+id/nameAlt" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AuswÃ¤hlen"
        android:id="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/ratingBar3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ankunft"
            android:id="@+id/textView7"
            android:layout_below="@+id/nameAlt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Entfernung"
            android:id="@+id/textView19"
            android:layout_below="@+id/nameAlt"
            android:layout_toRightOf="@+id/ankunftAlt"
            android:layout_toEndOf="@+id/ankunftAlt"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Parken"
            android:id="@+id/textView25"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Preis"
            android:id="@+id/textView26"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="12.40"
            android:id="@+id/ankunftAlt"
            android:layout_below="@+id/nameAlt"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="80km"
            android:id="@+id/entfernungAlt"
            android:layout_alignTop="@+id/textView19"
            android:layout_toRightOf="@+id/textView19"
            android:layout_toEndOf="@+id/textView19"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="25dp"
            android:id="@+id/imageView5"
            android:src="@drawable/parking_true"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="25dp"
            android:id="@+id/imageView6"
            android:src="@drawable/gas_grey"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>